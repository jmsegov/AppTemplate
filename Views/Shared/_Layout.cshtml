<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppTemplate</title>

    <!-- Font Awesome -->
    
    

    <link rel="stylesheet" href="~/theme/plugins/fontawesome-free/css/all.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://code.ionicframework.com/ionicons/2.0.1/css/ionicons.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/theme/css/adminlte.min.css">
    <!-- Google Font: Source Sans Pro -->
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">






</head>
<body class="hold-transition sidebar-mini skin-blue-light layout-footer-fixed" style="height: auto; min-height: 100%;">
    <!-- INICIO wrapper -->
    <div class="wrapper">

        <!-- NAVEGACION -->
        <nav class="main-header navbar navbar-expand">
            <!-- NAVEGACION PARTE IZQUIERDA -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <!-- ################################### -->
                <!--  OPCIONES DE  MENU  SUPERIOR IZQDA  -->
                <!-- FIN OPCIONES DE MENU SUPERIOR IZQDA -->
                <!-- ################################### -->
            </ul>

            <!-- NAVEGACION PARTE DERECHA -->
            <ul class="navbar-nav ml-auto">

                <!-- ################################## -->
                <!--  OPCIONES DE MENU  PERFIL USUARIO  -->

                <li class="nav-item dropdown user user-menu">
                    <a class="nav-item nav-link dropdown-toggle mr-md-2" href="#" id="user-profile" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                            <img src="~/images/user6.png" class="user-image" alt="User Image">
                            <span class="hidden-xs">José Miguel</span>  
                    </a>
                    <ul class="dropdown-menu">
                        <!-- User image -->
                        <li class="user-header">
                            <img src="~/images/user2.png" class="img-circle" alt="User Image">

                            <p>
                                José Miguel - Admin
                                <small>Conectado desde ...</small>
                            </p>
                        </li>
                        <!-- Menu Body -->
                        <li class="user-body">
                            <div class="row">
                                <div class="col-4 text-center">
                                <a href="#">Opción 1</a>
                                </div>
                                <div class="col-4 text-center">
                                <a href="#">Opción 2</a>
                                </div>
                                <div class="col-4 text-center">
                                <a href="#">Opción 3</a>
                                </div>
                            </div>
                        <!-- /.row -->
                        </li>
                        <!-- Menu Footer-->
                        <li class="user-footer">
                            <div class="float-left">
                                <a href="#" class="btn btn-default btn-flat">Perfil</a>
                            </div>
                            <div class="float-right">
                                <a href="#" class="btn btn-default btn-flat">Cerrar</a>
                            </div>
                        </li>
                    </ul>
                </li>
                <!-- FIN OPCIONE DE MENU PERFIL USUARIO -->
                <!-- ################################## -->



                <li class="nav-item">
                    <a class="nav-link" data-widget="control-sidebar" data-slide="true" href="#" role="button">
                    <i class="fas fa-th-large"></i>
                    </a>
                </li>
                <!-- ################################## -->
                <!--  OPCIONES DE  MENU  SUPERIOR DCHA  -->

                <!-- FIN OPCIONES DE MENU SUPERIOR DCHA -->
                <!-- ################################## -->
            </ul>
        </nav>
        <!-- FIN NAVEGACION -->

        <!-- BARRA LATERAL IZQUIERDA NAVEGACION -->
        <aside class="main-sidebar sidebar-light-primary elevation-4" style="height: 100vh;">
            <!-- ################################### -->
            <!-- ICONO  Y NOMBRE  DE  LA  APLICACION -->
            <a href="#" class="brand-link">
                <img src="~/images/ppal-icon.png"
                    alt="AdminLTE Logo"
                    class="brand-image img-circle elevation-3"
                    style="opacity: .8">
                <span class="brand-text font-weight-light">App [Prueba]</span>
            </a>
            <!-- FIN ICONO Y NOMBRE DE LA APLICACION -->
            <!-- ################################### -->

            <!-- OPCIONES MENU -->
            <div class="sidebar">
                <!-- AREA NAVEGACION DEL MENU -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <!-- ################################### -->
                        <!--  AREA   DE  MENU -->
                        <li class="nav-item">
                            <a href="#" class="nav-link active">
                                <i class="nav-icon far fa-image"></i>
                                <p>Opción 1</p>
                            </a>
                        </li>
                        <li class="nav-header">Administración</li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon far fa-user-circle"></i>
                                <p>Usuarios</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link">
                                <i class="nav-icon fas fa-users-cog"></i>
                                <p>Grupos</p>
                            </a>
                        </li>
                        <li class="nav-item"> 
                            <a href="#" class="nav-link"> 
                                <i class="nav-icon fas fa-key"></i>
                                <p>Permisos</p>
                            </a>
                        </li>

                        <!-- FIN AREA DE MENU -->
                        <!-- ################################### -->
                    </ul>
                </nav>
                <!-- FIN AREA NAVEGACION DEL MENU -->
            </div>
            <!-- FIN OPCIONES MENU -->
        </aside>
        <!-- FIN BARRA LATERAL IZQUIERDA NAVEGACION -->



        <!--  ################################  -->
        <!--  CONTENIDO DE LA PAGINA            -->
        @RenderBody()

        <!--  FIN CONTENIDO DE LA PAGINA        -->
        <!--  ################################  -->

        <footer class="main-footer">
            <div class="float-right d-none d-sm-block">
            <b>Version</b> 0.0
            </div>
            <strong>Copyright &copy; 2014-2020 <a href="#">Plantilla HTML</a>.</strong> All rights
            reserved.
        </footer>

        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-light">
            <!-- ########################## -->
            <!-- MENU   EMERGENTE   DERECHO -->
            <!-- FIN MENU EMERGENTE DERECHO -->
            <!-- ########################## -->
        </aside>

    </div>
    <!-- FIN wrapper -->

    <!-- jQuery -->
    <script src="~/theme/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/theme/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/theme/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/theme/js/adminlte.min.js"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="~/theme/dist/js/demo.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
